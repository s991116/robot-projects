#include <cstdlib>
#include <stdio.h>
#include <ComController.h>
#include <ComPort.h>
#include <ComMessage.h>
#include "Common.h"
#include "Controller.h"
#include "Arduino.h"
#include "View.h"

using namespace std;

int main(int argc, char** argv) {
    
    View* view;
    Arduino* arduino;    
    CameraDetector* cameraDetector;
    Controller* controller;
    
    view = new View();
    arduino = new Arduino();
    cameraDetector = new CameraDetector();
    
    controller = new Controller(arduino, cameraDetector, view);       
    
    controller->Start();
    
    return 0;
}